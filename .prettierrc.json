{
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 100,
  "semi": false,

  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "arrowParens": "always",

  "bracketSpacing": true,
  "proseWrap": "always",
  "singleAttributePerLine": true,
  "endOfLine": "auto",

  "importOrder": [
    "^app/(.*)$",
    "^components/(.*)$",
    "^ui-kit/(.*)$",
    "^assets/(.*)$",
    "^lib/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderMergeDuplicateImports": true,
  "importOrderTypeImportsToBottom": true,
  "importOrderSortSpecifiers": true
}
